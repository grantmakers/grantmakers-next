{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "WORKER_URL",
        "PROFILES_API_ENDPOINT",
        "AUTH_PRIVATE_KEY",
        "WAF_AUTH_VERIFY_KEY"
      ],
      "outputs": [
        ".svelte-kit/**",
        "apps/api/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "format": {
      "dependsOn": [
        "^format"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
